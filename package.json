{
  "name": "freepn_marketing_website",
  "version": "1.0.0",
  "description": "FreePN Marketing Website",
  "author": "Ian H. Bateman <free.private.network@gmail.com>",
  "license": "agpl-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/freepn/freepn_marketing_website"
  },
  "bugs": {
    "url": "https://github.com/freepn/freepn_marketing_website/issues"
  },
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "lint": "eslint src/js || true",
    "lint_fix": "eslint --fix src/js || true",
    "lint-scss": "stylelint src/scss/*.scss --syntax scss || true",
    "uglify": "yarn run uglify-script",
    "imagemin": "imagemin src/images/* -o dist/images",
    "serve": "browser-sync start --server --config bs-config.json --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "run-s lint-scss scss autoprefixer",
    "build:js": "run-s lint uglify",
    "build:images": "run-s imagemin",
    "build:html": "cp src/*.html dist/",
    "build:CNAME": "cp src/CNAME dist/",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch:images": "onchange \"src/images\" -- run-s build:images",
    "watch:html": "onchange \"src/*.html\" -- run-s build:html",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d dist",
    "uglify-script": "./uglify-script.sh"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "browser-sync": "^2.12.8",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "gh-pages": "^2.0.1",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.5.4",
    "stylelint": "^9.4.0",
    "uglify-es": "^3.3.10"
  },
  "homepage": "https://github.com/freepn/freepn_marketing_website",
  "main": ".eslintrc.js"
}
